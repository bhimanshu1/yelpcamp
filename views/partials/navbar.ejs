  <style>
    #spotlight-search {
      --bg-color: #1e1e2f;
      --search-bg: #2a2a3d;
      --text-color: #fff;
      --placeholder: #999;
      --border-color: #444;
      --radius: 12px;
    }

    #spotlight-search body,
    #spotlight-search * {
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }

    #spotlight-search .shortcut-hint {
      position: fixed;
      top: 1rem;
      right: 1rem;
      background: var(--search-bg);
      padding: 0.4rem 0.8rem;
      border-radius: var(--radius);
      font-size: 0.9rem;
      color: var(--text-color);
      opacity: 0.6;
      z-index: 1001;
    }

    #spotlight-search .spotlight-overlay {
      position: fixed;
      top: 0; left: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(5px);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 1000;
    }

    #spotlight-search .spotlight {
      background: var(--search-bg);
      padding: 1rem 1.5rem;
      border-radius: var(--radius);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
      width: 90%;
      max-width: 600px;
      display: flex;
      align-items: center;
      border: 1px solid var(--border-color);
      transform: translateY(-20px);
      opacity: 0;
      transition: all 0.3s ease;
    }

    #spotlight-search .spotlight.active {
      transform: translateY(0);
      opacity: 1;
    }

    #spotlight-search input {
      background: transparent;
      border: none;
      outline: none;
      width: 100%;
      font-size: 1.1rem;
      color: var(--text-color);
      caret-color: white;
    }

    #spotlight-search input::placeholder {
      color: var(--placeholder);
    }
  </style>

  <div class="shortcut-hint">Press <kbd>/</kbd> to search</div>

  <div class="spotlight-overlay" id="spotlight-overlay">
    <div class="spotlight" id="spotlight-box">
      <form action="">
        <input type="text" placeholder="Search anything..." id="spotlight-input" />
      </form>
    </div>
  </div>

  <script>
    (function () {
      const overlay = document.querySelector('#spotlight-search #spotlight-overlay');
      const input = document.querySelector('#spotlight-search #spotlight-input');
      const box = document.querySelector('#spotlight-search #spotlight-box');

      function openSpotlight() {
        overlay.style.display = 'flex';
        setTimeout(() => {
          box.classList.add('active');
          input.focus();
        }, 100);
      }

      function closeSpotlight() {
        box.classList.remove('active');
        overlay.style.display = 'none';
        input.value = '';
      }

      document.addEventListener('keydown', (e) => {
        if (e.key === '/' && document.activeElement !== input) {
          e.preventDefault();
          openSpotlight();
        }
        if (e.key === 'Escape') {
          closeSpotlight();
        }
      });

      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) closeSpotlight();
      });
    })();
  </script>
